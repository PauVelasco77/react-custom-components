{
  "name": "@pauvelasco77/pau-react-custom-components",
  "version": "0.0.13",
  "license": "MIT",
  "private": false,
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/rcc.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "ts:check": "tsc --noEmit",
    "build": "tsc && vite build",
    "phoenix": "rm -Rf node_modules yarn.lock && yarn",
    "watch-build": "tsc && vite build --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --environment jsdom",
    "coverage": "vitest --coverage",
    "publish:major": "yarn version major && git push origin master --follow-tags",
    "publish:minor": "yarn version minor && git push origin master --follow-tags",
    "publish:patch": "yarn version patch && git push origin master --follow-tags"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "lucide-react": "^0.476.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.2",
    "@storybook/addon-interactions": "^8.6.2",
    "@storybook/addon-onboarding": "^8.6.2",
    "@storybook/blocks": "^8.6.2",
    "@storybook/react": "^8.6.2",
    "@storybook/react-vite": "^8.6.2",
    "@storybook/test": "^8.6.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.7",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.11.3",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "storybook": "^8.6.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.1",
    "vite-plugin-lib-inject-css": "^2.2.1",
    "vitest": "^3.0.7"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
